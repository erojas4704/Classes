{% extends "base.j2" %}
{% block title %} {{survey.name}} {%endblock%}


{% block body %}
    <div class="container-fluid m2">
        <h1>{{survey.title}}</h1>

        <form id="form-survey">
        {% for question in survey.questions %}
            <div class="question-group pb-2">
                <div class="question">{{question.question}}</div>
                
                {% for choice in question.choices %}
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{question.question}}" id="{{choice}}">
                        <label class="form-check-label" for="{{choice}}">{{choice}}</label>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        <button class="btn btn-primary" type="submit" action="form">Done</button>
        </form>
        
    </div>
{% endblock%}


{%block scripts %}
{%endblock%}